<?xml version="1.0" encoding="utf-8"?>
<Elements xmlns="http://schemas.microsoft.com/sharepoint/">
  <CustomAction
	 Id="AIA.Intranet.VariablePicker"
	 RegistrationType="ContentType"
	 RegistrationId="0x01"
	 Location="CommandUI.Ribbon"
	 Rights="ViewListItems">
    <CommandUIExtension>
      <CommandUIDefinitions>
        <CommandUIDefinition
				 Location="Ribbon.EditingTools.CPInsert.Links.Controls._children">
          <Button
						Id="Ribbon.EditingTools.CPInsert.Links.VariablePicker"
						Command="Open_Variable_Picker"
						Sequence="35"
						Image16by16="~site/_layouts/images/AIA.Intranet.Infrastructure/VariableEditor.png"
						Image32by32="~site/_layouts/images/AIA.Intranet.Infrastructure/VariableEditor.png"
						Description="Open the variable selector."
						LabelText="Insert Variable"
						TemplateAlias="o1"/>
        </CommandUIDefinition>
      </CommandUIDefinitions>
      <CommandUIHandlers>
        <CommandUIHandler
					Command="Open_Variable_Picker"
					CommandAction="javascript:OpenVariableEditor();"
					EnabledScript="true" />
      </CommandUIHandlers>
    </CommandUIExtension>
  </CustomAction>
  <CustomAction
  Id="COB.Command.NewControlInExistingGroup.Notify.Script"
  Location="ScriptLink"
  ScriptSrc ="/_layouts/AIA.Intranet.Infrastructure/Scripts/VariableEditor.js"/>
  
</Elements>
